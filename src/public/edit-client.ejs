<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Client</title>
    <link rel="stylesheet" href="/clients/style.css/<%= client.PersonaID %>">
    <link rel="stylesheet" href="https://unicons.iconscout.com/release/v4.0.0/css/line.css">
</head>
<body>
<div class="header">
    <h1>Administracion</h1>
    <button class="homeBtn" type="button">
        <i class="uil-home"></i>
        <span class="btnText">Home</span>
    </button>
</div>
<div class="container">
    <h1>Edit Client</h1>
    <form action="/clients/update/<%= client.PersonaID %>" method="post">
        <div class="form first">
            <% ['Primer_Nombre', 'Segundo_Nombre', 'Primer_Apellido', 'Segundo_Apellido'].forEach(field => { %>
                <div class="form-group">
                    <label for="<%= field %>">
                        <%= field.replace(/_/g, ' ').replace(/([A-Z])/g, ' $1').trim().replace(/^./, function(str){ return str.toUpperCase(); }) + ':' %>
                    </label>
                    <input type="text" id="<%= field %>" name="<%= field %>"
                           value="<%= client[field] %>" required>
                </div>
            <% }); %>
            <div class="form-group">
                <label for="profesion">Profesion:</label>
                <input type="text" id="profesion" name="profesion" value="<%= client.ProfesionDescripcion %>" required>
            </div>
            <div class="form-group">
                <label for="fechaNacimiento">Date of Birth:</label>
                <input type="date" id="fechaNacimiento" name="fechaNacimiento"
                       value="<%= client.Fecha_Nacimiento ? client.Fecha_Nacimiento.toISOString().split('T')[0] : '' %>"
                       required>
            </div>
            <div class="form-group">
                <label for="genero">Genero:</label>
                <select id="genero" name="genero" required>
                    <% ['Male', 'Female', 'Other'].forEach((gender, index) => { %>
                        <option value="<%= index + 1 %>" <%= client.GeneroID === String(index + 1) ? 'selected' : '' %>><%= gender %></option>
                    <% }); %>
                </select>
            </div>
            <div class="form-group">
                <label for="tipoPersona">Person Type:</label>
                <select id="tipoPersona" name="tipoPersona" required>
                    <% ['Juridica', 'Fisica', 'PYME'].forEach((type, index) => { %>
                        <option value="<%= index + 1 %>" <%= client.Tipo_PersonaID === String(index + 1) ? 'selected' : '' %>><%= type %></option>
                    <% }); %>
                </select>
            </div>
            <button class="submitBtn" type="submit">
                <span class="btnText">Submit</span>
                <i class="uil uil-navigator"></i>
            </button>
        </div>
    </form>
</div>
<script src="/clients/edit-script.js/<%= client.PersonaID %>"></script>
</body>
</html>
